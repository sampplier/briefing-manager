generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://samuel:senhaboa@localhost:5432/briefingsdatabase?schema=public"
}

model Briefing {
  id         Int      @id @default(autoincrement())
  nome       String
  descricao  String
  dataHora   DateTime @default(now())
  estado     Estado
}

enum Estado {
  negociacao
  finalizado
  aprovado
}
model Usuario {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  senha    String
}

